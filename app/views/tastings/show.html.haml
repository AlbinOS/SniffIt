%h1= "#{t('activerecord.models.tasting')}"
%h2= @tasting.wine.full_name
%h2= @tasting.user.full_name
%p
  = link_to t('navigation.back_to.wine_show'), @tasting.wine, class: 'btn btn-info btn-sm', role: 'button'
  - if policy(@tasting).edit?
    = link_to t('actions.edit'), edit_wine_tasting_path(@tasting.wine, @tasting), class: 'btn btn-warning btn-sm', role: 'button'
  - if policy(@tasting).destroy?
    = link_to t('actions.destroy'), [@tasting.wine, @tasting], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', role: 'button'

%table.table.table-striped.table-hover.table-sm
  %thead.thead-inverse
    %tr
      %th= t('activerecord.models.analysis_conclusion')
  %tbody
    %tr
      %td
        - if @tasting.analysis_conclusion
          = t("analysis_conclusion.balances.#{@tasting.analysis_conclusion.balance}")
        - else
          = t('data.none')
