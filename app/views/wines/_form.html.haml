= form_for @wine do |f|
  = f.full_text_field :appellation, placeholder: 'Côte du Rhône, Médoc, ...', required: true
  = f.full_number_field :vintage
  = f.full_text_field :domaine, placeholder: 'Domaine des pères de l\'église, Château Pape Clément, ...', required: true
  = link_to "#{t('navigation.back_to.wine_index')}", wines_path, class: 'btn btn-info', role: 'button'
  = f.full_submit action_name, class: 'btn btn-primary'
